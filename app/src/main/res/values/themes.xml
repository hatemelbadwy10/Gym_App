<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gym_App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">?attr/colorOnBackground</item>
        <item name="colorPrimaryDark">@color/bbb</item>
        <item name="android:navigationBarColor">@color/bbb</item>

        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/material_on_surface_disabled</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="exercise_name">
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
<style name="exercise_detils">
    <item name="android:textSize">15sp</item>
    <item name="android:gravity">center</item>
    <item name="android:textStyle">italic</item>

</style>
</resources>